<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_result_item_train"
        android:textSize="20sp"
        />
    <ImageView
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_toRightOf="@id/query_result_item_train"
        android:layout_marginLeft = "5dp"
        android:id="@+id/query_result_item_1"
        android:layout_alignTop="@id/query_result_item_train"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_result_item_start"
        android:textSize="20sp"
        android:layout_alignTop="@id/query_result_item_train"
        android:layout_toRightOf="@id/query_result_item_1"
        />
    <ImageView
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_toRightOf="@id/query_result_item_start"
        android:id="@+id/query_result_item_2"
        android:layout_alignTop="@id/query_result_item_train"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_result_item_end"
        android:textSize="20sp"
        android:layout_alignTop="@id/query_result_item_train"
        android:layout_toRightOf="@id/query_result_item_2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_result_item_time"
        android:textSize="14sp"
        android:layout_below="@id/query_result_item_train"
        />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:src="@drawable/trig"
        android:layout_alignTop="@id/query_result_item_train"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/query_result_item_kind"
        android:textSize="16sp"
        android:layout_below="@id/query_result_item_time"
        />
</RelativeLayout>